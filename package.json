{
  "name": "jovans-test-package",
  "version": "1.0.0",
  "description": "A nice greeter",
  "main": "lib/Greatnes.js",
  "types": "lib/Greatnes.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vindu87/jovan-test-package.git"
  },
  "keywords": [
    "Hello",
    "Greeter"
  ],
  "author": "Z-J",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vindu87/jovan-test-package/issues"
  },
  "homepage": "https://github.com/vindu87/jovan-test-package#readme",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.5"
  }
}
